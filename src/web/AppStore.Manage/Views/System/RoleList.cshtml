@using AppStore.Models
@model System.Collections.Generic.IList<AppStore.Models.Role>

@{
    ViewBag.Title = "角色管理";
}

<div class="row">
    <div class="col-md-12">
        <!-- BEGIN PAGE TITLE & BREADCRUMB-->
        <h3 class="page-title">
            系统管理 <small>角色管理</small>
        </h3>
        <ul class="page-breadcrumb breadcrumb">
            <li>
                <i class="icon-home"></i>
                <a href="/">系统管理</a>
                <i class="icon-angle-right"></i>
            </li>
            <li><a href="#">角色管理</a></li>
        </ul>
        <!-- END PAGE TITLE & BREADCRUMB-->
    </div>
</div>
<div class="row">
    <div class="col-md-12">
        <div class="portlet-body">
            <div class="table-toolbar">
                <div class="btn-group">
                    <a id="sample_editable_1_new" class="btn green hidden" href="@Url.Action("RoleEdit")">
                        添加角色 <i class="icon-plus"></i>
                    </a>
                </div>
            </div>
            <div id="dataArea">

                <table class="table table-striped table-bordered table-hover" id="dataList">
                    <thead>
                        <tr>
                            <th class="table-checkbox">
                                <input type="checkbox" class="group-checkable" />
                            </th>
                            <th>角色名称</th>
                            <th>说明</th>
                            <th>操作</th>
                        </tr>
                    </thead>
                    <tbody>
                        @if (Model != null && Model.Count > 0)
                        {
                            foreach (Role entity in Model)
                            {
                                <tr class="odd gradeX">
                                    <td>
                                        <input type="checkbox" class="checkboxes" value="@entity.RoleID" />
                                    </td>
                                    <td>@entity.Name</td>
                                    <td>@entity.Description</td>
                                    <td>@Html.ActionLink("查看", "RoleEdit", new RouteValueDictionary() { { "id", entity.RoleID } })</td>
                                </tr>
                            }
                        }
                        else
                        {

                            <tr class="odd gradeX">
                                <td colspan="4">暂无数据</td>
                            </tr>
                        }
                    </tbody>
                </table>
            </div>
        </div>
    </div>
</div>
