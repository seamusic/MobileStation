@{
    ViewBag.Title = "Home Page";
}
@section style
{
    <link href="~/Content/themes/metronic/pages/tasks.css" rel="stylesheet" type="text/css" />
}
@section featured {
}
@section importscript{
    <script src="~/Content/Plugins/flot/jquery.flot.js"></script>
    <script src="~/Content/Plugins/flot/jquery.flot.js" type="text/javascript"></script>
    <script src="~/Content/Plugins/flot/jquery.flot.resize.js" type="text/javascript"></script>
    <script src="~/Content/Plugins/flot/jquery.flot.categories.min.js"></script>
    <script src="~/Content/Plugins/jquery.pulsate.min.js" type="text/javascript"></script>
    <script src="~/Content/Plugins/bootstrap-daterangepicker/moment.min.js" type="text/javascript"></script>
    <script src="~/Content/Plugins/bootstrap-daterangepicker/daterangepicker.js" type="text/javascript"></script>
    <script src="~/Content/Plugins/gritter/js/jquery.gritter.js" type="text/javascript"></script>
    <script src="~/Content/Plugins/jquery-easy-pie-chart/jquery.easy-pie-chart.js" type="text/javascript"></script>
    <script src="~/Content/Plugins/jquery.sparkline.min.js" type="text/javascript"></script>
    <script src="~/Scripts/Metronic/index.js"></script>
    <script>
        jQuery(document).ready(function () {
            //App.init(); // initlayout and core plugins
            Index.initCharts(); // init index page's custom scripts
        });
    </script>
}
<!-- END SAMPLE PORTLET CONFIGURATION MODAL FORM-->
<!-- BEGIN PAGE HEADER-->
<div class="row">
    <div class="col-md-12">
        <!-- BEGIN PAGE TITLE & BREADCRUMB-->
        <h3 class="page-title">后台管理 <small>首页</small>
        </h3>
        <ul class="page-breadcrumb breadcrumb">
            <li>
                <i class="icon-home"></i>
                <a href="/">首页</a>
                <i class="icon-angle-right"></i>
            </li>
            <li><a href="#">概览</a></li>
            <li class="pull-right">
                <div id="dashboard-report-range" class="dashboard-date-range tooltips" data-placement="top" data-original-title="Change dashboard date range">
                    <i class="icon-calendar"></i>
                    <span></span>
                    <i class="icon-angle-down"></i>
                </div>
            </li>
        </ul>
        <!-- END PAGE TITLE & BREADCRUMB-->
    </div>
</div>
<div class="row">
    <div class="col-md-12">
        <div class="portlet">
            <div class="portlet-title">
                <div class="caption"><i class="icon-bell"></i>今日数据</div>
                <div class="tools">
                    <a href="javascript:;" class="collapse"></a>
                    <a href="javascript:;" class="reload"></a>
                    <a href="javascript:;" class="remove"></a>
                </div>
            </div>
            <div class="portlet-body">
                <div class="table-responsive">
                    <table class="table table-striped table-bordered table-advance table-hover">
                        <thead>
                            <tr>
                                <th></th>
                                <th>新增装机店</th>
                                <th>新增用户</th>
                                <th>活跃用户</th>
                                <th>新增用户占比</th>
                            </tr>
                        </thead>
                        <tbody>
                            @{
                                foreach (dynamic o in ViewBag.OverViewData)
                                {
                                <tr>
                                    <th>@o.Date</th>
                                    <td>@o.NewStore</td>
                                    <td>@o.TodayMobile</td>
                                    <td>@o.ActiveMobile</td>
                                    <td>@o.NewMobilePercent</td>
                                </tr>
                                }
                            }
                        </tbody>
                    </table>
                </div>
            </div>
        </div>
    </div>
</div>
<div class="row">
    <div class="col-md-12">
        <div class="portlet solid bordered light-grey">
            <div class="portlet-title">
                <div class="caption"><i class="icon-bar-chart"></i>最近15天概况</div>
                <div class="tools">
                    <div class="btn-group" data-toggle="buttons">
                        <label class="btn default btn-sm active">
                            <input type="radio" name="options" class="toggle" id="option1">新增用户
                        </label>
                        <label class="btn default btn-sm">
                            <input type="radio" name="options" class="toggle" id="option2">应用安装
                        </label>
                    </div>
                </div>
            </div>
            <div class="portlet-body">
                <div id="site_statistics_loading">
                    <img src="/Images/loading.gif" alt="loading" />
                </div>
                <div id="site_statistics_content" class="display-none">
                    <div id="site_statistics" class="chart"></div>
                </div>
            </div>
        </div>
    </div>
</div>
