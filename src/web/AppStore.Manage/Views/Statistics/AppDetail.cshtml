@using System.Data
@using AppStore.Models
@using Webdiyer.WebControls.Mvc
@model System.Data.DataTable
@{
    ViewBag.Title = "客户端应用统计详细";
    var app = ViewBag.App as Application;
}
@section style
{
}
@section featured {
}
@section importscript{
    @{Html.RegisterMvcPagerScriptResource();}
}

<!-- END SAMPLE PORTLET CONFIGURATION MODAL FORM-->
<!-- BEGIN PAGE HEADER-->
<div class="row">
    <div class="col-md-12">
        <!-- BEGIN PAGE TITLE & BREADCRUMB-->
        <h3 class="page-title">
            @app.ApplicationName  <small>统计详细</small>
        </h3>
        <ul class="page-breadcrumb breadcrumb">
            <li>
                <i class="icon-home"></i>
                <a href="/">统计管理</a>
                <i class="icon-angle-right"></i>
            </li>
            <li><a href="#">应用统计</a></li>
            <li class="pull-right">
                <div id="dashboard-report-range" class="dashboard-date-range tooltips" data-placement="top" data-original-title="Change dashboard date range">
                    <i class="icon-calendar"></i>
                    <span></span>
                    <i class="icon-angle-down"></i>
                </div>
            </li>
        </ul>
        <!-- END PAGE TITLE & BREADCRUMB-->
    </div>
</div>
<div class="row">
    <div class="col-md-12">
        <div class="portlet-body">
            <div id="dataArea">
                <table class="table table-striped table-bordered table-hover" id="dataList">
                    <thead>
                        <tr>
                            <th>手机序列号</th>
                            <th>第一次启动</th>
                            <th>第二次启动</th>
                            <th>运行时间</th>
                            <th>启动次数</th>
                            <th>更新时间</th>
                            <th></th>
                        </tr>
                    </thead>
                    <tbody>
                        @if (Model != null && Model.Rows.Count > 0)
                        {
                            foreach (DataRow dataRow in Model.Rows)
                            {
                                <tr>
                                    <td>@dataRow["ClientKey"]</td>
                                    <td>@dataRow["FirstTime"]</td>
                                    <td>@dataRow["SecondTime"]</td>
                                    <td>@dataRow["Totaltime"]</td>
                                    <td>@dataRow["Frequency"]</td>
                                    <td>@dataRow["UpdateTime"]</td>
                                    <td>@Html.ActionLink("详情", "AppRunningLog", new RouteValueDictionary() { { "id", dataRow["MobileAppID"] } })</td>
                                </tr>
                            }
                        }
                        else
                        {

                            <tr class="odd gradeX">
                                <td colspan="7">暂无数据</td>
                            </tr>
                        }
                    </tbody>
                </table>
            </div>
        </div>
    </div>
</div>
