@using System.Data
@using AppStore.Models
@using Webdiyer.WebControls.Mvc
@model System.Data.DataTable
@{
    ViewBag.Title = "装机店统计报表";
}
@section style
{
}
@section featured {
}
@section importscript{
}

<!-- END SAMPLE PORTLET CONFIGURATION MODAL FORM-->
<!-- BEGIN PAGE HEADER-->
<div class="row">
    <div class="col-md-12">
        <!-- BEGIN PAGE TITLE & BREADCRUMB-->
        <h3 class="page-title">装机店统计报表 <small>统计报表</small>
        </h3>
        <ul class="page-breadcrumb breadcrumb">
            <li>
                <i class="icon-home"></i>
                <a href="/">装机店统计报表</a>
                <i class="icon-angle-right"></i>
            </li>
            <li><a href="#">装机店统计报表</a></li>
            <li class="pull-right">
                <div id="dashboard-report-range" class="dashboard-date-range tooltips" data-placement="top" data-original-title="Change dashboard date range">
                    <i class="icon-calendar"></i>
                    <span></span>
                    <i class="icon-angle-down"></i>
                </div>
            </li>
        </ul>
        <!-- END PAGE TITLE & BREADCRUMB-->
    </div>
</div>
<div class="row inbox">
    <div class="col-md-12">
        <div class="portlet-body">
            <div id="dataArea">
                <table class="table table-striped table-bordered table-hover" id="dataList">
                    <thead>
                        <tr>
                            <th>名称</th>
                            <th>装机用户数</th>
                            <th>7天活跃用户</th>
                            <th>有效应用</th>
                            <th></th>
                        </tr>
                    </thead>
                    <tbody>
                        @if (Model != null && Model.Rows.Count > 0)
                        {
                            foreach (DataRow dataRow in Model.Rows)
                            {
                                <tr>
                                    <td>@dataRow["ClientName"]</td>
                                    <td>@dataRow["TotalClient"]</td>
                                    <td>@dataRow["Last7daysClient"]</td>
                                    <td>@dataRow["ActiveStart"]</td>
                                    <td>@Html.ActionLink("详情", "StoreDetail", new RouteValueDictionary() { { "id", dataRow["PCClientID"] } })</td>
                                </tr>
                            }
                        }
                        else
                        {

                            <tr class="odd gradeX">
                                <td colspan="9">暂无数据</td>
                            </tr>
                        }
                    </tbody>
                </table>
            </div>
        </div>
    </div>
</div>