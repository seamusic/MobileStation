<!DOCTYPE html>
<!--[if IE 8]> <html lang="en" class="ie8 no-js"> <![endif]-->
<!--[if IE 9]> <html lang="en" class="ie9 no-js"> <![endif]-->
<!--[if !IE]><!-->
<html lang="en" class="no-js">
<!--<![endif]-->
<!-- BEGIN HEAD -->
<head>
    <meta charset="utf-8" />
    <title>@ViewBag.Title -- 推推助手</title>
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta content="width=device-width, initial-scale=1.0" name="viewport" />
    <meta http-equiv="X-UA-Compatible" content="IE=EmulateIE8" />
    <meta content="" name="description" />
    <meta content="" name="author" />
    <meta name="MobileOptimized" content="320">
    <!-- BEGIN GLOBAL MANDATORY STYLES -->
    <link href="~/Content/Plugins/font-awesome/css/font-awesome.min.css" rel="stylesheet" />
    <link href="~/Content/Plugins/bootstrap/css/bootstrap.min.css" rel="stylesheet" />
    <link href="~/Content/Plugins/uniform/css/uniform.default.css" rel="stylesheet" type="text/css" />
    <!-- END GLOBAL MANDATORY STYLES -->
    <!-- BEGIN THEME STYLES -->
    <link href="~/Content/themes/metronic/style-metronic.css" rel="stylesheet" />
    <link href="~/Content/themes/metronic/style.css" rel="stylesheet" />
    <link href="~/Content/themes/metronic/style-responsive.css" rel="stylesheet" />
    <link href="~/Content/themes/metronic/plugins.css" rel="stylesheet" />
    <link href="~/Content/themes/metronic/themes/light.css" rel="stylesheet" />
    <!-- BEGIN PAGE LEVEL STYLES -->
    <link href="~/Content/Plugins/fancybox/source/jquery.fancybox.css" rel="stylesheet" />
    <!-- END PAGE LEVEL STYLES -->
    @RenderSection("style", required: false)
    <link href="~/Content/themes/metronic/custom.css" rel="stylesheet" />
    <!-- END THEME STYLES -->
    <!-- BEGIN CORE PLUGINS -->
    <!--[if lt IE 9]>
    <script src="~/Content/Plugins/respond.min.js"></script>
    <script src="~/Content/Plugins/excanvas.min.js"></script>
     <![endif]-->
</head>
<!-- BEGIN BODY -->
<body class="page-header-fixed page-footer-fixed">
    <!-- BEGIN HEADER -->
    @Html.Partial("_Header")
    <!-- END HEADER -->
    <div class="clearfix"></div>
    <!-- BEGIN CONTAINER -->
    <div class="page-container">
        <!-- BEGIN SIDEBAR -->
        <div class="page-sidebar navbar-collapse collapse">
            <!-- BEGIN SIDEBAR MENU -->
            @Html.Partial("_SiderbarMenu")
            <!-- END SIDEBAR MENU -->
        </div>
        <!-- END SIDEBAR -->
        <!-- BEGIN PAGE -->
        <div class="page-content">
            @RenderBody()
        </div>
        <!-- END PAGE -->
    </div>
    <!-- END CONTAINER -->
    <!-- BEGIN FOOTER -->
    <div class="page-container">
        @Html.Partial("_Footer")
    </div>
    <!-- END FOOTER -->
    <script src="~/Content/Plugins/jquery-1.10.2.min.js"></script>
    <script src="~/Content/Plugins/jquery-migrate-1.2.1.js"></script>
    <script src="~/Content/Plugins/bootstrap/js/bootstrap.min.js"></script>
    <script src="~/Content/Plugins/bootstrap-hover-dropdown/twitter-bootstrap-hover-dropdown.js"></script>
    <script src="~/Content/Plugins/jquery-slimscroll/jquery.slimscroll.min.js" type="text/javascript"></script>
    <script src="~/Content/Plugins/jquery.blockui.js"></script>
    <script src="~/Content/Plugins/jquery.cookie.js"></script>
    <script src="~/Content/Plugins/uniform/jquery.uniform.js"></script>
    @RenderSection("importscript", required: false)
    <script src="~/Scripts/common.js"></script>
    <script src="~/Scripts/Metronic/app.js"></script>
    @RenderSection("featured", required: false)
    <script type="text/javascript">
        jQuery(document).ready(function () {
            App.init();
            currentMemu();
        });
        function currentMemu() {
            var $menu = $(".page-sidebar-menu");
            $("ul.page-sidebar-menu>li").removeClass("active");
            $("ul.page-sidebar-menu a").removeClass("active");
            var url = '@Request.Url.LocalPath.ToLower()';
            $menu.find("a").each(function (i) {
                var $this = $(this);
                if (url == $this.attr("href").toLowerCase()) {
                    $this.parent().addClass("active");
                    $this.parent().parent().parent().addClass("active");
                    return false;
                }
                return true;
            });
        }
    </script>
</body>
<!-- END BODY -->
</html>
